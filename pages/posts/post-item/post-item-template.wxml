<template name="postItem">
    <view class="post_con">
        <view class="post_author">
            <image src="{{avatar}}"></image>
            <text>{{date}}</text>
        </view>
        <text class="post_title">{{title}}</text>
        <image class="post_img" src="{{imgSrc}}"></image>
        <text class="post_content">{{content}}</text>
        <view class="post_like">
            <image src="/images/icon/chat.png"></image>
            <text>{{collection}}</text>
            <image src="/images/icon/view.png"></image>
            <text>{{reading}}</text>
        </view>
    </view>
</template>
