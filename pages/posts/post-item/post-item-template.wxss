.post_con{
	display:felx;
	flex-direction:column;
	margin-top:20rpx;
	margin-bottom:20rpx;
	background:white;
	border-bottom:1px solid #ededed;
	border-top:1px solid #ededed;
	padding:0 10px 5px;
}
.post_author{
	margin:10rpx 0 20rpx 0;

}
.post_author image{
	width:60rpx;
	height:60rpx;
	vertical-align:middle;
}
.post_author text{
	margin-left:20rpx;
	vertical-align:middle;
	font-size:26rpx;
}
.post_title{
	font-size:34rpx;
	font-weight:600;
	color:#333;
	margin:0 0 10px 0;
}
.post_img{
	width:100%;
	height:340rpx;
	margin:10px auto 5px;
}
.post_content{
	width:100%;
	color:#666;
	margin:0 0 40rpx;
	line-height:40rpx;
	letter-spacing:2rpx;
	font-size:24rpx;
}
.post_like{
	font-size:13px;
	flex-direction:row;
	line-height:16px;
}
.post_like image{
	vertical-align:middle;
	width:16px;
	height:16px;
	margin-right:8px;
}
.post_like text{
	vertical-align:middle;
	margin-right:20px;
	line-height:16px;
}