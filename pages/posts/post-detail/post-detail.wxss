.container {
    display: flex;
    flex-direction: column;
    color: #666;
}

.head_img {
    width: 100%;
    height: 460rpx;
}

.author_date {
    flex-direction: row;
    text-align: left;
    margin: 20rpx 0;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.author_date image {
    width: 64rpx;
    height: 64rpx;
    vertical-align: middle;
}

.author_date text {
    font-size: 24rpx;
    margin-left: 20rpx;
    vertical-align: middle;
    color: #999;
}

.author_date text.author {
    font-size: 30rpx;
}

.title {
    margin-left: 20rpx;
    font-size: 36rpx;
    font-weight: 700;
    margin-top: 30rpx;
    letter-spacing: 2rpx;
    color: #4b556c;
}

.tool {
    margin-top: 20rpx;
}

.tool_img {
    float: right;
    margin-right: 40rpx;
    vertical-align: middle;
    height: 90rpx;
}

.tool_img image {
    width: 90rpx;
    height: 90rpx;
}

.tool_img image.share_img {
    margin-left: 30rpx;
}

.tool_line {
    width: 670rpx;
    height: 1px;
    background-color: #e5e5e5;
    vertical-align: middle;
    position: relative;
    top: 46rpx;
    margin: 0 auto;
    z-index: -99;
}

.detail {
    padding: 0 20rpx;
    box-sizing: border-box;
    width: 100%;
    line-height: 44rpx;
    font-size: 26rpx;
    margin-top:20rpx;
    margin-bottom:40rpx;
}

.audio {
    width: 102rpx;
    height: 110rpx;
    position: absolute;
    left: 50%;
    margin-left: -51rpx;
    top: 180rpx;
    opacity: 0.6;
}
